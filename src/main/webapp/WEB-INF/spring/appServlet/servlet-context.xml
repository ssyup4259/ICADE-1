<!-- 인터셉터 객체 생성 -->
    <beans:bean id="loginInterceptor" class="com.project.interceptor.LoginInterceptor"></beans:bean>
<!-- Interceptor 설정 -->    
    <interceptors>
        <interceptor>
            <mapping path="/**"/>
            <beans:ref bean="loginInterceptor" />            
        </interceptor>
    </interceptors>
    
<!-- 인터셉터 객체 생성 -->
